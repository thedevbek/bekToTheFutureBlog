---
// import BlogPost from '../components/BlogPost.astro';
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';
const pageTitle = "Blog";
const allPosts = await Astro.glob('../pages/posts/*.md');
---

<BaseLayout>
  <!-- <h1 class="text-xl font-lobster mb-10">{pageTitle}</h1> -->
  <ul class="flex flex-wrap -mx-4 hover:cursor-pointer">
    {allPosts.map((post) => (
      <a href={post.url} class="flex-shrink-0 w-full md:w-1/2 lg:w-1/3 px-4 mb-4">
        <li>
          <img
            src={post.frontmatter.image.url}
            alt={post.frontmatter.image.alt}
            class="w-full h-48 object-cover"
          />
          <h2 class="mt-2 mb-5">{post.frontmatter.title}</h2>
        </li>
      </a>
    ))}
  </ul>
</BaseLayout>

